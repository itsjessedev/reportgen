# ReportGen Configuration
# Copy to .env and fill in your values

# App Settings
DEMO_MODE=false
DEBUG=false
DATABASE_URL=sqlite:///./reports.db

# Report Schedule (cron format)
REPORT_SCHEDULE="0 7 * * 1"  # Every Monday at 7 AM

# Email Delivery (SendGrid)
SENDGRID_API_KEY=your-api-key
FROM_EMAIL=reports@yourcompany.com
DEFAULT_RECIPIENTS=manager@company.com,team@company.com

# Branding
COMPANY_NAME=Your Company
COMPANY_LOGO_URL=https://yourcompany.com/logo.png
PRIMARY_COLOR=#3b82f6

# Data Sources (optional - configure as needed)
# PostgreSQL
# POSTGRES_URL=postgresql://user:pass@host:5432/db

# Google Sheets
# GOOGLE_CREDENTIALS_FILE=credentials.json
# GOOGLE_SPREADSHEET_ID=your-sheet-id

# REST API
# API_BASE_URL=https://api.example.com
# API_KEY=your-api-key

# Airtable
# AIRTABLE_API_KEY=your-key
# AIRTABLE_BASE_ID=your-base
